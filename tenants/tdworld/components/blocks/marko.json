{
  "taglib-imports": [
    "./header/marko.json"
  ],
  "<tenant-simple-card-block>": {
    "template": "./simple-card.marko",
    "@node": "object",
    "@alingment": {
      "type": "string",
      "default-value": "left"
    },
    "@table-width": {
      "type": "number",
      "default-value": 345
    },
    "@img-width": {
      "type": "number",
      "default-value": 320
    },
    "@contentLinkStyle": {
      "type" : "object",
      "default-value": {
        "text-align": "left",
        "text-decoration": "none !important",
        "font-size": "14px",
        "line-height": "24px",
        "font-family": "Arial, Helvetica, sans-serif",
        "color": "#00B39E",
        "font-weight": "bold"
      } 
    },
    "@teaserStyle": {
      "type" : "object",
      "default-value": {
        "font-size": "12px",
        "line-height": "146%",
        "margin": "0",
        "padding": "0",
        "color": "#000000",
        "font-family": "Arial, 'Helvetica Neue', Helvetica, sans-serif"
      }
    },
    "@buttonStyle" : {
      "type": "string",
      "default-value": "font-family: Garamond, serif; font-size: 13px; line-height: 21px; border-spacing: 0; padding: 10px 15px; table-layout: fixed; background-color: #00b398;"
    },
    "@buttonTextStyle" : {
      "type": "object",
      "default-value": {
        "color": "#ffffff",
        "font-family": "Helvetica, Arial, sans-serif",
        "font-size": "14px",
        "font-weight": "bold",
        "text-decoration": "none",
        "text-transform": "uppercase"
      }
    }
  },
  "<tenant-promotion-block>": {
    "template": "./promotion.marko",
    "@node": "object",
    "@alingment": {
      "type": "string",
      "default-value": "left"
    },
    "@table-width": {
      "type": "number",
      "default-value": 345
    },
    "@img-width": {
      "type": "number",
      "default-value": 320
    },
    "@teaserStyle": {
      "type" : "object",
      "default-value": {
        "font-size": "12px",
        "line-height": "146%",
        "margin": "0",
        "padding": "0",
        "color": "#000000",
        "font-family": "Arial, 'Helvetica Neue', Helvetica, sans-serif"
      }
    }
  }
}
