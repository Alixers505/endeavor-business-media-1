{
  "taglib-imports": [
    "./header/marko.json"
  ],
  "<tenant-simple-card-block>": {
    "template": "./simple-card.marko",
    "@node": "object",
    "@alingment": {
      "type": "string",
      "default-value": "left"
    },
    "@table-width": {
      "type": "number",
      "default-value": 300
    },
    "@img-width": {
      "type": "number",
      "default-value": 300
    },
    "@contentLinkStyle": {
      "type" : "object",
      "default-value": {
        "text-align": "left",
        "text-decoration": "none !important",
        "font-size": "14px",
        "line-height": "24px",
        "font-family": "Arial, Helvetica, sans-serif",
        "color": "#00B39E",
        "font-weight": "bold"
      } 
    },
    "@teaserStyle": {
      "type" : "object",
      "default-value": {
        "font-size": "12px",
        "line-height": "146%",
        "margin": "0",
        "padding": "0",
        "color": "#000000",
        "font-family": "Arial, 'Helvetica Neue', Helvetica, sans-serif"
      }
    },
    "@contentReadMoreLinkStyle" : {
      "type": "object",
      "default-value": {
        "text-align": "left",
        "text-decoration": "none !important",
        "font-size": "12px",
        "font-family": "Arial, Helvetica, sans-serif",
        "color": "#407f7f"
      }
    }
  },
  "<tenant-promotion-block>": {
    "template": "./promotion.marko",
    "@node": "object",
    "@alingment": {
      "type": "string",
      "default-value": "left"
    },
    "@table-width": {
      "type": "number",
      "default-value": 300
    },
    "@img-width": "300",
    "@teaserStyle": {
      "type" : "object",
      "default-value": {
        "font-size": "12px",
        "line-height": "146%",
        "margin": "0",
        "padding": "0",
        "color": "#000000",
        "font-family": "Arial, 'Helvetica Neue', Helvetica, sans-serif"
      }
    }
  }
}
